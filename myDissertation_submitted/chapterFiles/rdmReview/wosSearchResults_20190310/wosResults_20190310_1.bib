@article{ ISI:000459110100008,
Author = {Pismennaya, Elena V. and Stukalo, Vladimir A. and Grudeva, Elena A.},
Title = {{STRUCTURAL AND FUNCTIONAL MODEL OF THE STOCK-RAISING TERRITORY ON THE
